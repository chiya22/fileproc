<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/stylesheets/destyle.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
  <title>ファイル管理</title>
</head>

<body>
  <div class="main-container">
    <% if (flashMessages) { %>
      <% if (flashMessages.msg) { %>
        <div class="alert">
          <p class="alert-danger"><%= flashMessages.msg %></p>
        </div>
      <% } %>
    <% } %>
    <ul>
      <% if (files) { %>
      <%  files.forEach( file => { %>
      <li>
        <form method="POST" action="/files/download">
          <p><%= file.originalname %><input type="submit" value="ダウンロード" /></p>
          <input type="hidden" name="id" value="<%= file.id %>" />
        </form>
      </li>
      <%  }) %>
      <% } %>
    </ul>
    <form method="POST" action="/files/upload" enctype="multipart/form-data">
      <input type="file" name="file" required />
      <input type="submit" value="アップロード" />
    </form>
    <div class="btn-footer">
      <a href="/" class="btn-link">戻る</a>
      <% if (locals.user){ %>
        <form method="POST" action="/logout">
          <input type="submit" class="btn-link" button value="ログアウト" />
        </form>
      <% }  %>
    </div>
  </div>
</body>

</html>